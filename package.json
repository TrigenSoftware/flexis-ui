{
  "name": "@flexis/ui",
  "version": "0.1.3",
  "description": "Styleless React Components",
  "author": "dangreen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TrigenSoftware/flexis-ui.git"
  },
  "bugs": {
    "url": "https://github.com/TrigenSoftware/flexis-ui/issues"
  },
  "browsers": "> 1%, last 2 versions, iOS > 7, Android > 4.4, not OperaMini all",
  "scripts": {
    "lint:styles": "stylelint 'src/**/*.css'",
    "lint:scripts": "eslint --cache 'src/**/*.js'",
    "test": "npm run lint:styles && npm run lint:scripts",
    "build": "./scripts/buildPackage.sh",
    "prepublishOnly": "if [ -f README.md ]; then exit 1; fi",
    "storybook": "start-storybook -p 3001 -c .storybook",
    "build-storybook": "NODE_ENV=production build-storybook -c .storybook -o storybook-build",
    "createComponent": "./scripts/createComponent.sh"
  },
  "keywords": [
    "react-components",
    "ui",
    "styleless"
  ],
  "dependencies": {
    "react-input-mask": "^1.2.2",
    "react-transition-group": "^2.3.1",
    "stylable": "^5.3.5",
    "stylable-integration": "^6.1.2",
    "throttle-debounce": "^1.0.1"
  },
  "peerDependencies": {
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.12",
    "@storybook/addon-info": "^3.3.12",
    "@storybook/addon-knobs": "^3.3.13",
    "@storybook/addon-options": "^3.3.13",
    "@storybook/react": "^3.3.12",
    "autoprefixer": "^8.0.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.17.0",
    "eslint-config-trigen": "^2.5.1",
    "eslint-loader": "^1.9.0",
    "postcss-loader": "^2.1.0",
    "postcss-reporter": "^5.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "stylelint": "^9.1.1",
    "stylelint-config-trigen": "^1.9.4",
    "svg-react-loader": "^0.4.5"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "useBuiltIns": true,
          "modules": false,
          "targets": {
            "browsers": [
              "> 1%",
              "last 2 versions",
              "iOS > 7",
              "Android > 4.4",
              "not OperaMini all"
            ]
          },
          "node": "current"
        }
      ],
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  }
}
