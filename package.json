{
  "name": "@flexis/ui",
  "version": "0.1.0",
  "description": "Styleless React Components",
  "author": "dangreen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TrigenSoftware/flexis-ui.git"
  },
  "bugs": {
    "url": "https://github.com/TrigenSoftware/flexis-ui/issues"
  },
  "main": "lib/index.js",
  "browsers": "> 1%, last 2 versions, iOS > 7, Android > 4.4, not OperaMini all",
  "scripts": {
    "lint:styles": "stylelint 'src/**/*.css'",
    "lint:scripts": "eslint --cache 'src/**/*.js'",
    "test": "npm run lint:styles && npm run lint:scripts",
    "build": "babel ./src -d ./lib -s inline",
    "watch": "babel ./src -w -d ./lib -s inline",
    "prepublishOnly": "npm run build",
    "storybook": "start-storybook -p 3001 -c .storybook",
    "build-storybook": "NODE_ENV=production build-storybook -c .storybook -o storybook-build"
  },
  "keywords": [
    "react-components",
    "ui",
    "styleless"
  ],
  "dependencies": {
    "stylable": "^5.1.3",
    "stylable-integration": "^6.0.8",
    "wix-react-tools": "^4.1.2"
  },
  "peerDependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.2.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.12",
    "@storybook/addon-info": "^3.3.12",
    "@storybook/addon-knobs": "^3.3.13",
    "@storybook/addon-options": "^3.3.13",
    "@storybook/react": "^3.3.12",
    "autoprefixer": "^8.0.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.17.0",
    "eslint-config-trigen": "^2.4.0",
    "eslint-loader": "^1.9.0",
    "postcss-loader": "^2.1.0",
    "postcss-reporter": "^5.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "stylelint": "^8.4.0",
    "stylelint-config-trigen": "^1.8.1",
    "svg-react-loader": "^0.4.5"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "useBuiltIns": true,
          "modules": false,
          "targets": {
            "browsers": [
              "> 1%",
              "last 2 versions",
              "iOS > 7",
              "Android > 4.4",
              "not OperaMini all"
            ]
          },
          "node": "current"
        }
      ],
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "files": [
    "lib"
  ]
}
